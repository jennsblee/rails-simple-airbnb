<div class="container d-flex justify-content-between">
  <!-- <div class="view" style="background-image: url('<%= @flat.image %>'); background-repeat: no-repeat; background-size: 1400px 100px; background-position: center center top: sticky;"> -->
  <div>
    <div class="container border p-3 my-3" style="background-color: #F8F9FA;">
      <h1><strong><%= @flat.name %></strong></h1>
      <h3><%= @flat.address %></h3>
    </div>

    <div class="container border p-3 my-3" style="background-color: #F8F9FA;">
      <h2>A bit more about this flat...</h2>
      <p><%= @flat.description %></p>
    </div>

    <div class="container border p-3 my-3" style="background-color: #F8F9FA;">
      <h2>Details</h2>
      <div class="d-flex">
        <p><i class="fas fa-user-friends"></i> <%= @flat.number_of_guests %></p>
        <p>&nbsp;<i class="fas fa-euro-sign"></i> <%= @flat.price_per_night %></p>
      </div>
    </div>
  </div>

  <div>
    <div class="container border p-3 my-3" style="background-color: #F8F9FA;">
      <h3>Book this place!</h3>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1">From: </span>
        </div>
        <input type="text" class="form-control" placeholder="12/10/2020" aria-label="From date" aria-describedby="basic-addon1">
      </div>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1">To: </span>
        </div>
        <input type="text" class="form-control" placeholder="20/10/2020" aria-label="To date" aria-describedby="basic-addon1">
      </div>
      <button type="submit" class="btn btn-success">Book</button>
    </div>
    <p>SHARE</p>
  </div>
</div>
</div>
